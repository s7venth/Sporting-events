<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:gravity="top"
    android:fillViewport="true" >
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context="fr.sportingevents.MainActivity" >

    <!--  Header  Starts-->

	  		<LinearLayout
	  		    android:id="@+id/header"
	  		    android:layout_width="fill_parent"
	  		    android:layout_height="wrap_content"
	  		    android:orientation="horizontal"
	  		    android:paddingBottom="20dip"
	  		    android:paddingTop="25dip" >

	  		    <!-- Logo Start -->
	
	
	  		    <!-- Logo Ends -->
	
	
	  		</LinearLayout>
	
	  	<!--  Header Ends --> 
	  	
	  	<!--  Formulaire start --> 
	  	
	  	<!-- Image deco page login by Zoubert Hanem -->
	    <ImageView
	        android:id="@+id/deco_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="26dp"
	        android:contentDescription="@string/desc_login_title"
	        android:src="@drawable/deco_login_title" />
	    
		<!-- Include du formulaire de connexion dans activity_main -->
	    <include
	        android:id="@+id/formulaire"
	        android:layout_width="300dp"
	        android:layout_height="230dp"
	        android:layout_below="@+id/deco_login"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        layout="@layout/formulaire" />
		<!--  Formulaire end --> 
		
	</RelativeLayout>
</ScrollView>